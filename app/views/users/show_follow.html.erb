<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-3 col-sm-4">
    <section>
      <%= gravatar_for(@user, shape: 'img-circle') %>
      <h1><%= @user.name %></h1>
      <span><%= link_to 'View my Profile', @user %></span>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% if @users.any? %>
          <div class="user_avatars">
            <% @users.each do |user| %>
                <%= link_to gravatar_for(user, size: 20),
                            user %>
            <% end %>
          </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-9 col-sm-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
        <ul class="users">
          <%= render @users %>
        </ul>
        <%= will_paginate previous_label: '&laquo;', next_label: '&raquo;' %>
    <% end %>
  </div>
</div>