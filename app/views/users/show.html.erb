<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-3 col-sm-4">
    <section>
      <h1>
        <%= gravatar_for( @user, shape: 'img-circle') %>
        <%= @user.name %>
      </h1>

    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-9 col-sm-8">
    <%= render 'follow_form' if signed_in? %>
  </div>
  <div class="col-md-9 col-sm-8">
    <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts, previous_label: '&laquo;', next_label: '&raquo;' %>
    <% end %>
  </div>

</div>
