<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-3 col-sm-4">
    <section>
      <h1>
        <%#= image_tag('rails.png', class: 'gravatar img-responsive img-circle') %>
        <!--todo Change later the stub for the gravatar-->
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>

    </section>
  </aside>
  <div class="col-md-9 col-sm-8">
    <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts, previous_label: '&laquo;', next_label: '&raquo;' %>
    <% end %>
  </div>

</div>
