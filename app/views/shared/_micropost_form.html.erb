<%= semantic_form_for @micropost do |f| %>
<%#= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <%= f.inputs do %>
          <%= f.input :content, as: :text, label: false,
                      input_html: {rows: 3} %>
          <% end %>
      <p id="txtarea_feedback"><em id="count"></em> </p>
    </div>
    <%= f.actions do %>
        <%= f.action :submit, :button_html => {class: 'btn btn-lg
        btn-info'} %>
    <% end %>
<% end %>

